<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filmové novinky"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="cursive"
                android:textColor="@color/colorMainBackground"
                android:textStyle="bold"
                android:textSize="30dp" />


            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/main_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/newTrailer1"
                    android:text="Tenkrát v Hollywoodu (2019) nový CZ HD trailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMainBackground"
                    android:textSize="15dp"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageViewYoutube1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/tenkrat_v_hollywoodu"
                    android:scaleType="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/main_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/newTrailer2"
                    android:text="Terminátor: Temný osud (2019) CZ HD teaser trailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMainBackground"
                    android:textSize="15dp"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageViewYoutube2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/terminator_temny_osud"
                    android:scaleType="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/main_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/newTrailer3"
                    android:text="Avengers: Endgame (2019) HD trailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMainBackground"
                    android:textSize="15dp"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageViewYoutube3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/iron"
                    android:scaleType="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>